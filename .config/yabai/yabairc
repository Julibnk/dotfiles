#!/usr/bin/env sh

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config                                 \
    external_bar                 all:0:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               off            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  10             \
    bottom_padding               10             \
    left_padding                 10             \
    right_padding                10             \
    window_gap                   10             \
    layout                       stack            \
    mouse_modifier               fn             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

yabai -m config --display 1 external_bar all:30:0

# mission-control desktop labels
yabai -m space 1 --label code
yabai -m space 2 --label browser
yabai -m space 3 --label work
yabai -m space 4 --label util
yabai -m space 5 --label other
yabai -m space 6 --label external

# window rules
yabai -m rule --add app="^Ghostty$" space=^code
yabai -m rule --add app="^Brave Browser$" space=^browser
yabai -m rule --add app="^Microsoft Outlook$" space=^work
yabai -m rule --add app="^Microsoft Teams$" space=^work
yabai -m rule --add app="^Notion$" space=^util
yabai -m rule --add app="^Postman$" space=^util
yabai -m rule --add app="^DBeaver$" space=^util
yabai -m rule --add app="^Obsidian$" space=^util
yabai -m rule --add app="^Spotify$" space=^other

# specific space settings
# yabai -m config --space work layout bsp

# Ignore apps
yabai -m rule --add app="^(Messages|System Settings|Calculator|App Store|Steam|Alfred|Activity Monitor|Strongbox|IINA)" manage=off

borders style=round active_color=0xffe1e3e4 inactive_color=0xff494d64 width=6.0 &
